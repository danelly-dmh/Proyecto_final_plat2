<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_paint"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eduardo.game.Paint"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnnuevo"
            android:layout_weight="1"
            android:background="@android:drawable/ic_input_add" />

        <Button
            android:text="trazo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btntrazo"
            android:layout_weight="1"
            android:background="@drawable/trazo2" />

        <Button
            android:text="borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnborrar"
            android:layout_weight="1" />

        <Button
            android:text="guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnguardar"
            android:layout_weight="1" />
    </LinearLayout>

    <view
        android:layout_height="wrap_content"
        class="com.example.eduardo.game.Lienzo"
        android:id="@+id/lienzo"
        android:layout_width="332dp"
        android:layout_weight="0.91"
        android:background="#FFFFFFFF"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="rojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bntrojo"
            android:tag="#FF0000"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark" />

        <Button
            android:text="azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnazul"
            android:tag="#0000FF"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:text="verde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnverde"
            android:layout_weight="1"
            android:tag="#00FF00"
            android:background="@android:color/holo_green_light" />

        <Button
            android:text="blanco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnblanco"
            android:layout_weight="1"
            android:tag="#FFFFFF"
            android:background="@color/common_google_signin_btn_text_dark_default" />

        <Button
            android:text="negro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnnegro"
            android:tag="#000000"
            android:layout_weight="1"
            android:background="@color/cast_expanded_controller_background_color" />
    </LinearLayout>
</LinearLayout>
